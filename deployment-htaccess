# Laravel .htaccess - Package Deployment with Installer Support

<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Allow installer directory access
    RewriteCond %{REQUEST_URI} ^/install/
    RewriteRule .* - [L]
    
    # Allow debug.php for troubleshooting
    RewriteCond %{REQUEST_URI} ^/debug\.php
    RewriteRule .* - [L]

    # Redirect Trailing Slashes If Not A Folder
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Security Protection
<FilesMatch "^(\.env|\.env\..*|\.git.*|composer\.(json|lock)|package\.(json|lock)|artisan|phpunit\.xml)$">
    Require all denied
</FilesMatch>

# Block access to Laravel directories (skip for installer)
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} !^/install/
    RewriteCond %{REQUEST_URI} !^/debug\.php
    RewriteRule ^wscrm(/.*)?$ - [F,L]
    
    RewriteCond %{REQUEST_URI} !^/install/
    RewriteCond %{REQUEST_URI} !^/debug\.php
    RewriteRule ^(app|bootstrap|config|database|resources|routes|storage|tests|vendor)(/.*)?$ - [F,L]
    
    RewriteCond %{REQUEST_URI} !^/install/
    RewriteCond %{REQUEST_URI} !^/debug\.php
    RewriteRule ^(node_modules|dist)(/.*)?$ - [F,L]
</IfModule>

# Block access to sensitive file types (allow for installer)
<LocationMatch "^/install/">
    # Allow installer access to all file types
</LocationMatch>

<FilesMatch "\.(md|txt|log|ini|conf|cfg|sql|sqlite|lock|yaml|yml)$">
    <LocationMatch "^/install/">
        Require all granted
    </LocationMatch>
    Require all denied
</FilesMatch>

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Disable server signature
ServerTokens Prod
ServerSignature Off

# Block version control directories
<DirectoryMatch "\.(git|svn)">
    Require all denied
</DirectoryMatch>